@model WrokFlowWeb.ViewModel.Role.UserRoleViewModel

@{

}

<form  method="post">
    <div class="card">
        <div class="card-header">
            <h1>Add or remove users of this role</h1>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserRoleList.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model.UserRoleList[i].UserId" />
                <input hidden asp-for="@Model.UserRoleList[i].UserName" />
                <input asp-for="@Model.UserRoleList[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.UserRoleList[i].IsSelected">
                    @Model.UserRoleList[i].UserName;
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit"  value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="Details" asp-route-id="@Model.RoleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form> 
